<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailProduct">

  <ImageView
      android:layout_gravity="center"
      android:paddingTop="80px"
      android:id="@+id/productDetailIamge"
      android:layout_width="200dp"
      android:layout_height="200dp" />

  <LinearLayout
      android:padding="80px"
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="25sp"
            android:text="Product Name:-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

      <TextView
          android:paddingLeft="40dp"
          android:textSize="25sp"
          android:textColor="@color/colorPrimaryDark"
          android:id="@+id/productDetailName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TextView
          android:textSize="25sp"
          android:layout_marginTop="20dp"
          android:text="Product Stock:-"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <TextView
          android:paddingLeft="40dp"
          android:layout_marginTop="20dp"
          android:textSize="25sp"
          android:textColor="@color/colorPrimaryDark"
          android:id="@+id/productDetailStock"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TextView
          android:textSize="25sp"
          android:layout_marginTop="20dp"
          android:text="Product Price:-"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <TextView
          android:paddingLeft="40dp"
          android:textSize="25sp"
          android:layout_marginTop="20dp"
          android:textColor="@color/colorPrimaryDark"
          android:id="@+id/productDetailPrice"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TextView
          android:textSize="25sp"
          android:layout_marginTop="20dp"
          android:text="Product Description:-"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <TextView
          android:paddingLeft="20dp"
          android:textSize="25sp"
          android:layout_marginTop="20dp"
          android:textColor="@color/colorPrimaryDark"
          android:id="@+id/productDetailDescription"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

    </LinearLayout>

  </LinearLayout>

  <LinearLayout
      android:gravity="center"
      android:layout_marginTop="180dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <Button
        android:id="@+id/updateBtn"
        android:background="@drawable/mybutton"
        android:textColor="@color/White"
        android:text="Update"
        android:textSize="20sp"
        android:layout_width="150dp"
        android:layout_height="60dp" />

    <Button
        android:background="@drawable/mybutton"
        android:textColor="@color/White"
        android:layout_marginLeft="20dp"
        android:id="@+id/deleteBtn"
        android:text="Delete"
        android:textSize="20sp"
        android:layout_width="150dp"
        android:layout_height="60dp" />
  </LinearLayout>
</LinearLayout>